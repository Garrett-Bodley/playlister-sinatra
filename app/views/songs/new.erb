<h1>Create An Song:</h1>

<form method="POST" action='/songs'>
  <label for="Name">Name: </label><br>
  <input id="Name" type="text" name="song[name]"><br>

  <h3>Choose an Artist:</h3>

  <% @artists.each do |artist|%>
    <input type="radio" id="<%=artist.name%>" name="song[artist_id]" value=<%=artist.id%>><%=artist.name%><br>
  <%end%>

  <h3><label for="Artist Name">Create an Artist: </label><br></h3>
  <input id="Artist Name" type="text" name="artist[name]"><br>

  <h3>Select Genres:</h3>

  <% @genres.each do |genre|%>
    <input type="checkbox" id="<%=genre.name%>" name="song[genre_ids][]" value="<%=genre.id%>"><%=genre.name%><br>
  <%end%>

  <h3> <label for="song_genre">Create a Genre: </label><br></h3>
  <input id="song_genre" type="text" name="genre[name]"><br>

  <input id="Create" type="submit" value="Create Song">
</form>